{
    "tasks": [
        {
            "type": "shell",
            "label": "Build (G++)",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Create Binary Folder"
            ],
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Create Binary Folder",
            "command": "/bin/mkdir",
            "args": [
                "-p",
                "bin"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "none",
            "detail": "Pre-Task for Build"
        },
        {
            "type": "shell",
            "label": "Build (Java)",
            "command": "/usr/bin/javac",
            "args": [
                "-d",
                "${workspaceFolder}/bin/",
                "-encoding",
                "UTF-8",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "java",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "dependsOn": [
                "Create Binary Folder"
            ]
        }
    ],
    "version": "2.0.0"
}